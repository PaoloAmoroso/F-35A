<PropertyList>

<particlesystem>
<name>condensation-right</name>

<offsets>
<x-m>  0.000 </x-m>
<y-m>  0.000 </y-m>
<z-m> -0.000 </z-m>
<roll-deg>    0.000 </roll-deg>
<pitch-deg>   0.000 </pitch-deg>
<heading-deg> 0.000 </heading-deg>
</offsets>

<texture>smoke.png</texture>

<condition>
      <and>
        <greater-than>
          <property>sim/multiplay/generic/float[17]</property>
          <value>90</value>
        </greater-than>
        <greater-than>
          <property>sim/multiplay/generic/float[18]</property>
          <value>0</value>
        </greater-than>
        <greater-than>
          <property>sim/multiplay/generic/float[12]</property>
          <value>80</value>
        </greater-than>
       <less-than>
          <property>sim/multiplay/generic/float[12]</property>
          <value>400</value>
        </less-than>
        <or>
          <or>
            <less-than>
              <property>sim/multiplay/generic/float[13]</property>
              <value>-0.076</value>
            </less-than>
            <greater-than>
              <property>sim/multiplay/generic/float[13]</property>
              <value>0.076</value>
            </greater-than>
          </or>
          <or>
            <less-than>
              <property>surface-positions/elevator-pos-norm</property>
              <value>-0.076</value>
            </less-than>
            <greater-than>
              <property>surface-positions/elevator-pos-norm</property>
              <value>0.076</value>
            </greater-than>
          </or>
        </or>
      </and>
    </condition>

<emissive>true</emissive>
<lighting>false</lighting>
<align>billboard</align> <!-- billboard / fixed -->
<attach>world</attach> <!-- world / local-->

<placer>
<type>point</type> <!-- sector / segments / point -->
</placer>

<shooter>
<theta-min-deg>10</theta-min-deg>
<theta-max-deg>86</theta-max-deg>
<phi-min-deg>-1.5</phi-min-deg>
<phi-max-deg>8</phi-max-deg>
<speed-mps>
<value>10</value>
<spread>2.5</spread>
</speed-mps>
<rotation-speed>
<x-min-deg-sec>5</x-min-deg-sec>
<y-min-deg-sec>5</y-min-deg-sec>
<z-min-deg-sec>5</z-min-deg-sec>
<x-max-deg-sec>60</x-max-deg-sec>
<y-max-deg-sec>60</y-max-deg-sec>
<z-max-deg-sec>60</z-max-deg-sec>
</rotation-speed>
</shooter>

<counter>
<particles-per-sec>
<value>100</value>
<spread>1</spread>
</particles-per-sec>
</counter>

<particle>
<start>
<color>
<red><value>1</value></red>
<green><value>1</value></green>
<blue><value>1</value></blue>
<alpha><value>0.1</value></alpha>
</color>
<size>
<value>0.1</value>
</size>
</start>

<end>
<color>
<red><value>1</value></red>
<green><value>1</value></green>
<blue><value>1</value></blue>
<alpha><value>0.0001</value></alpha>
</color>
<size>
<value>1.0</value>
</size>
</end>

<life-sec>
<value>1.5</value>
</life-sec>
       
<mass-kg>0.0001</mass-kg>
<radius-m>0.1</radius-m>
</particle>
     
<program>
<fluid>air</fluid>
<gravity>false</gravity>
<wind>true</wind>
</program>
     
</particlesystem>

</PropertyList>